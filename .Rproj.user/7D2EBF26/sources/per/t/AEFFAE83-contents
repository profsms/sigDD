
parallel_trend_plot <- function(metric, time, affected) {
  
  data <- data.frame()
  data$metric <- metric
  data$affected <- affected
  data$time <- time
  
  Affected_colors <- c("blue", "orange")
  
  # Create the plot
  ggplot(data, aes_string(x = time, y = metric, color = factor(affected))) +
    geom_point(size = 3) +
    geom_line(aes_string(linetype = factor(affected)), size = 1) +
    labs(title = "Parallel Trend Plot",
         x = "Time",
         y = metric,
         color = "Affected") +
    scale_linetype_manual(values = c("solid", "dashed")) +
    scale_color_manual(values = affected_colors) +
    theme_bw()
}
